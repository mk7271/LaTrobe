<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            app:srcCompat="@drawable/download" />

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="SUBJECTS"
            android:textColor="#EC2F22"
            android:textSize="28sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_sbj1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="50dp"
            android:backgroundTint="#ED2F22"
            android:text="Mobile Application And Development"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_sbj2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ED2F22"
            android:text="System Analysis And Design"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_sbj3"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ED2F22"
            android:text="Algorithm And Data Structure"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_sbj4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#ED2F22"
            android:text="Professional Practices And Entrepreneurship"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout>